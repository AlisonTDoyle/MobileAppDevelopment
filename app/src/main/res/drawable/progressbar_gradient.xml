<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp"/>
            <solid android:color="#D3D3D3"/> <!-- Background color (e.g., light gray) -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp"/>
                <gradient
                    android:centerColor="#57B658"
                    android:endColor="#d3333b"
                    android:startColor="#E6C929" /><!-- Progress color (e.g., red) -->
            </shape>
        </clip>
    </item>
</layer-list>